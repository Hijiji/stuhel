<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.helper.study.stuhel.mapper.MyPageDAO">

    <resultMap type="com.helper.study.stuhel.to.MemberTO" id="myPageMember">
        <result property="id" column="ID" />
        <result property="password" column="PASSWORD" />
        <result property="name" column="NAME" />
        <result property="creditNumber" column="CREDITNUMBER" />
        <result property="birthday" column="BIRTHDAY" />
    </resultMap>

    <resultMap type="com.helper.study.stuhel.to.BookTO" id="myPageBook">
        <result property="bookingId" column="BOOKING_ID" />
        <result property="userId" column="USER_ID" />
        <result property="roomId" column="ROOM_ID" />
        <result property="bookingDate" column="BOOKING_DATE" />
        <result property="bookingTime" column="BOOKING_TIME" />
    </resultMap>

    <select id="retrieve" parameterType="com.helper.study.stuhel.to.MemberTO" resultMap="myPageMember">
        select * from MEMBER_SECURITY
        where ID = #{id}
    </select>

    <update id="changeInfo" parameterType="com.helper.study.stuhel.to.MemberTO">
        UPDATE MEMBER_SECURITY
        SET
        ID = #{id}
        ,NAME = #{name}
        ,PASSWORD = #{password}
        ,BIRTHDAY = #{birthday}
        WHERE ID = #{sessionId}  <!--TO에 sessionId 없어서 에러뜰 수도 있음 파라메터타입 ...바꾸든지 어쩌던지 해봐 ~-->
    </update>

    <select id="bookStatusRetrieve" parameterType="com.helper.study.stuhel.to.BookTO" resultMap="myPageBook">
        SELECT *
        FROM ROOM_BOOK
        WHERE USER_ID = #{userId}
            AND BOOKING_DATE LIKE #{bookingDate}||'%'
    </select>
    <select id="bookDateSearch" parameterType="com.helper.study.stuhel.to.MemberTO" resultMap="myPageMember">
        SELECT ROOM_ID, BOOKING_DATE,BOOKING_TIME
        FROM STUDY_ROOM
        WHERE ROOM_ID = #{id}
    </select>

</mapper>