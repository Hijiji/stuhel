<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.helper.study.stuhel.mapper.MyPageDAO">

    <resultMap type="com.helper.study.stuhel.to.MemberTO" id="Member">
        <result property="id" column="ID" />
        <result property="password" column="PASSWORD" />
        <result property="name" column="NAME" />
        <result property="creditNumber" column="CREDITNUMBER" />
        <result property="birthday" column="BIRTHDAY" />
    </resultMap>

    <select id="retrieve" parameterType="com.helper.study.stuhel.to.MemberTO" resultMap="Member">
        select * from MEMBER_SECURITY
        where ID = #{id}
    </select>



    <update id="changeInfo" parameterType="String">
        UPDATE MEMBER_SECURITY
        SET
        ,ID = #{id}
        ,NAME = #{name}
        ,PASSWORD = #{password}
        ,BIRTHDAY = #{birthDay}
        WHERE ID = #{sessionMemberId}  <!--TO에 sessionId 없어서 에러뜰 수도 있음 파라메터타입 ...바꾸든지 어쩌던지 해봐 ~-->
    </update>
</mapper>